# Django
DEBUG=0
SECRET_KEY=change_me_to_a_long_random_secret

# CORRECTED: Use your server's IP address, without "http://" or port.
ALLOWED_HOSTS=192.168.1.100,localhost,127.0.0.1

# Database (Django settings expect DB_* names)
DB_NAME=quizarrow
DB_USER=quizarrow
DB_PASSWORD=choose_strong_password

# Security-related origins
# CORRECTED: Use the full origin URL for CORS and CSRF.
CORS_ALLOWED_ORIGINS=http://192.168.1.100,http://localhost,http://127.0.0.1
CSRF_TRUSTED_ORIGINS=http://192.168.1.100,http://localhost,http://127.0.0.1
CORS_ALLOW_CREDENTIALS=True
# Disable secure cookies for HTTP-only proxy setup
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False


# Gunicorn workers
GUNICORN_WORKERS=3

# Frontend build-time API base (frontend expects VITE_API_BASE)
VITE_API_BASE=/api